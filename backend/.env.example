# Server Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database Configuration
DATABASE_URL=postgresql://crypto_user:crypto_password_dev@localhost:5433/crypto_portfolio_dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cryptocurrency API Keys
# Option 1: Binance (Recommended for production)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# Option 2: CoinGecko (Free tier available)
COINGECKO_API_KEY=your_coingecko_api_key_here

# Option 3: CoinMarketCap
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Market Data Provider (binance, coingecko, coinmarketcap)
MARKET_DATA_PROVIDER=binance

# Security
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=10

# CORS
CORS_ORIGIN=http://localhost:4200
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
CACHE_TTL_PRICE=60
CACHE_TTL_HISTORICAL=300

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log
LOG_ERROR_FILE_PATH=logs/error.log
